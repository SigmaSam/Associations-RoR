<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th>Creation date</th>
      <th>Location</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.events.upcoming.each do |event| %>
      <tr>
        <td><%= event.title.capitalize %></td>
        <td><%= event.body.capitalize %></td>
        <td><%= event.date %></td>
        <td><%= event.created_at.to_date %></td>
        <td><%= event.location.capitalize %></td>
        <td><%= event.creator.name.capitalize %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= edit_btn(event) %></td>
        <td><%= destroy_btn(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>