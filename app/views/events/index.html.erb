<p id="notice"><%= notice %></p>

<% if current_user %>
  <%= link_to 'Log Out', logout_path %><br>
  <h3>Signed in as: <%= link_to current_user.name.capitalize, user_path(current_user) %></h3>
<% else %>
  <%= link_to 'Sign Up', signup_path %> or 
  <%= link_to 'Log In', login_path %>
<% end %><br>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th>Location</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title.capitalize %></td>
        <td><%= event.body.capitalize %></td>
        <td><%= event.date %></td>
        <td><%= event.location.capitalize %></td>
        <td><%= event.creator.name.capitalize %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= edit_btn(event) %></td>
        <td><%= destroy_btn(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Event', new_event_path %>

<div>
<h2>Today Events</h2>
  <% @today.each do |i| %>
    <%= i.date %>
    <%= i.title %><br>   
  <% end %>
<h2>Upcoming Events</h2>
  <% @upcoming.each do |i| %>
    <%= i.date %>
    <%= i.title %><br>   
  <% end %>
<h2>Past Events</h2>
  <% @past.each do |i| %>
    <%= i.date %>
    <%= i.title %><br>
  <% end %>
</div>